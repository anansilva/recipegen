<div class="mt-5">
  <% if recipes.present? %>
    <div class="d-flex justify-content-between">
      <%== pagy_info(@pagy) %>
      <%== pagy_bootstrap_nav(@pagy, link_extra: 'data-turbo-action=advance') %>
    </div>
    <% recipes.each do |recipe| %>
      <div class="card mb-3">
        <div class="row g-0">
          <div class="col-md-4">
            <img src="<%= recipe.image_link %>" class="img-fluid rounded-start" alt="Recipe image" />
          </div>
          <div class="col-md-8">
            <div class="card-body">
              <p class="text-muted mb-1 fw-semibold"><%= recipe.category&.name %></p>
              <h5 class="card-title mb-1"><%= recipe.title %></h5>
              <p class="text-muted fst-italic">By: <%= recipe.author %></p>
              <p class="fw-bold">Ingredients:</p>
              <p><%= recipe.ingredients.join(', ') %></p>
              <% total_time = recipe.prep_time + recipe.cook_time %>
              
              <div class="d-flex justify-content-between align-items-center mt-3">
                <div class="star-rating">
                  <% full_stars = recipe.rating.floor %>
                  <% half_star = recipe.rating - full_stars >= 0.5 %>
                  <% (1..5).each do |star| %>
                    <% if star <= full_stars %>
                      <i class="bi bi-star-fill"></i>
                    <% elsif star == full_stars + 1 && half_star %>
                      <i class="bi bi-star-half"></i>
                    <% else %>
                      <i class="bi bi-star"></i>
                    <% end %>
                  <% end %>
                </div>
                
                <span class="position-relative p-3">
                  <i class="bi bi-clock"></i> <%= total_time %> minutes
                </span>
              </div>
            </div>
          </div>
        </div>
      </div>
    <% end %>
    <div class="d-flex justify-content-between">
      <%== pagy_info(@pagy) %>
      <%== pagy_bootstrap_nav(@pagy, link_extra: 'data-turbo-action=advance') %>
    </div>
  <% elsif !recipes.present? && ingredients.present? %>
    <p class="text-center">Sorry... No recipes found for <%= ingredients.join(', ') %></p>
  <% end %>
</div>
