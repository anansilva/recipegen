<div class="mt-5">
  <% if recipes.present? %>
    <h5 class="text-xl font-semibold mb-2"><%= recipes_total_count %> recipes found based on your ingredients:</h5>

    <% recipes.each do |recipe| %>
      <div class="card mb-3">
        <div class="row g-0">
          <div class="col-md-4">
            <img src="<%= recipe.image_link %>" class="img-fluid rounded-start" alt="Recipe image" />
          </div>
          <div class="col-md-8">
            <div class="card-body">
              <p class="text-muted mb-1 fw-semibold">Category: <%= recipe.category.name %></p>
              <h5 class="card-title mb-1"><%= recipe.title %></h5>
              <p class="text-muted fst-italic">By: <%= recipe.author %></p>
              <p class="fw-bold">Ingredients:</p>
              <p><%= recipe.ingredients.join(', ') %></p>
              <% total_time = recipe.prep_time + recipe.cook_time %>
              <div class="position-relative mt-5">
                <span class="position-absolute bottom-0 end-0 p-3">
                  <i class="bi bi-clock"></i> <%= total_time %> minutes
                </span>
              </div>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  <% elsif !recipes.present? && ingredients.present? %>
    <p class="text-center">Sorry... No recipes found for <%= ingredients.join(', ') %></p>
  <% end %>
</div>
